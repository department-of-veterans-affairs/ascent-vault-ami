{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": "",
    "aws_region": "us-gov-west-1"
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "region": "{{user `aws_region`}}",
      "source_ami": "ami-1fbe067e",
      "instance_type": "t2.micro",
      "ssh_username": "ec2-user",
      "ssh_pty": true,
      "ami_name": "ascent-vault {{timestamp}}",
      "launch_block_device_mappings": [
        {
          "device_name": "/dev/sda1",
          "volume_size": 10,
          "volume_type": "gp2",
          "delete_on_termination": true
        }
      ],
      "tags": {
        "name": "ascent-vault",
        "Vault Version": "0.9.1",
        "Consul Version": "1.0.3"
      },
      "snapshot_tags": 
      {
        "name": "ascent-vault"
      },
      "run_tags": {
        "Vault Version": "0.9.1",
        "Consul Version": "1.0.3"
      }
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "vault.hcl",
      "destination": "~/vault.hcl"
    },
    {
      "type": "file",
      "source": "vault.service",
      "destination": "~/vault.service"
    },
    {
      "type": "file",
      "source": "vault.pem",
      "destination": "~/server.pem"
    },
    {
      "type": "file",
      "source": "vault.key",
      "destination": "~/server.key"
    },
    {
      "type": "file",
      "source": "vault-redirectaddr.sh",
      "destination": "~/vault-redirectaddr.sh"
    },
    {
      "type": "file",
      "source": "consul/consul.service",
      "destination": "~/consul.service"
    },
    {
      "type": "file",
      "source": "consul/consul-client-config.json",
      "destination": "~/consul-config.json"
    },
    {
      "type": "shell",
      "scripts": [
        "prereqs.sh",
        "install-vault.sh",
        "consul/install-consul.sh",
        "consul/configure-service.sh"
      ]
    }
  ]
}