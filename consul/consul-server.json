{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": "",
    "aws_region": "us-gov-west-1",
    "ami_version": "{{timestamp}}",
    "base_ami_version": "*"
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "region": "{{user `aws_region`}}",
      "source_ami_filter": {
        "filters": {
          "name": "ascent-base-{{user `base_ami_version`}}"
        },
        "most_recent": true
      },
      "instance_type": "t2.micro",
      "ssh_username": "ec2-user",
      "ssh_pty": true,
      "ami_name": "ascent-consul-server-{{user `ami_version`}}",
      "launch_block_device_mappings": [
        {
          "device_name": "/dev/sda1",
          "volume_size": 10,
          "volume_type": "gp2",
          "delete_on_termination": true
        }
      ],
      "tags": {
        "name": "ascent-consul-server"
      },
      "snapshot_tags": 
      {
        "name": "ascent-consul-server"
      }
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
          "sudo yum -y update"
      ]
    },
    {
      "type": "file",
      "source": "consul.service",
      "destination": "~/consul.service"
    },
    {
      "type": "file",
      "source": "consul-server-config.json",
      "destination": "~/consul-config.json"
    },
    {
      "type": "file",
      "source": "./monitor/",
      "destination": "/tmp/"
    }
    {
      "type": "shell",
      "scripts": [
        "prereqs.sh",
        "install-consul.sh",
        "configure-service.sh",
	"setup_monitor_statsd.sh"
      ]
    }
  ]
}
